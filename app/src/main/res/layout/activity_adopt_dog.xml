<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adoptDog.presenters.AdoptDogActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_0_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_adopt_dog"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="60dp"
        android:background="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/bt_home"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_0_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_adopt_dog"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="90dp"
        android:background="@color/black"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/bt_adopt_dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/comforta_w_400"
        android:gravity="center"
        android:text="@string/title_adopt_me"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/iv_adopt_dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
