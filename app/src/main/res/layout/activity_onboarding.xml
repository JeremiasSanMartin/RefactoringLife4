<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onBoarding.presenters.OnBoardingActivity">

    <ImageView
        android:id="@+id/onboard_back_dog"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/icon_dog_onboarding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onboard_text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/title_hello"
        android:textColor="@color/title_hello_orange"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/onboard_back_dog"
        app:layout_constraintTop_toBottomOf="@+id/onboard_back_dog" />

    <TextView
        android:id="@+id/onboard_text_human"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/title_human"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/onboard_back_dog"
        app:layout_constraintTop_toBottomOf="@+id/onboard_text_hello" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/ropa_sans_regular"
        android:text="@string/welcome_question"
        android:textColor="@color/description_gray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/onboard_back_dog"
        app:layout_constraintTop_toBottomOf="@+id/onboard_text_human" />

    <ImageView
        android:id="@+id/onboard_footprint_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/icon_footprint_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/onboard_footprint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_footprint_pet"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/onboard_footprint_back"
        app:layout_constraintEnd_toEndOf="@+id/onboard_footprint_back"
        app:layout_constraintStart_toStartOf="@+id/onboard_footprint_back"
        app:layout_constraintTop_toTopOf="@+id/onboard_footprint_back" />

    <ImageView
        android:id="@+id/onboard_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:animation="@anim/mov_arrow"
        android:background="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/onboard_footprint" />

</androidx.constraintlayout.widget.ConstraintLayout>
