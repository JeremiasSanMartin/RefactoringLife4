<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangles1"
        android:layout_width="50dp"
        android:layout_height="650dp"
        android:background="#2E2D2D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_rectangle2_design_menu"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:background="#F6652B"
        app:layout_constraintStart_toEndOf="@+id/rectangles1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_desing_menu"
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:text="Pablo Perez"
        android:textSize="21sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/linear_rectangle2_design_menu"
        app:layout_constraintStart_toEndOf="@+id/rectangles1" />

    <View
        android:id="@+id/view_image_desing_menu"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/group"
        app:layout_constraintEnd_toEndOf="@+id/linear_rectangle2_design_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangles2"
        android:layout_width="300dp"
        android:layout_height="470dp"
        android:background="#F8F5F5"
        app:layout_constraintStart_toEndOf="@+id/rectangles1"
        app:layout_constraintTop_toBottomOf="@+id/linear_rectangle2_design_menu" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="66dp"
        android:layout_height="26dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Home"
        android:textAlignment="center"
        android:textSize="21sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/rectangles1"
        app:layout_constraintTop_toBottomOf="@+id/linear_rectangle2_design_menu" />


    <TextView
        android:id="@+id/tv_desing_terms_conditions"
        android:layout_width="260dp"
        android:layout_height="26dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Terminos y Condiciones"
        android:textSize="21sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/rectangles1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view_linea_desing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="65dp"
        android:background="#CAC7C7"
        app:layout_constraintBottom_toBottomOf="@+id/rectangles2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_desing_log_out"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/log_out"
        app:layout_constraintBottom_toBottomOf="@+id/rectangles2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_desing_salir"
        android:layout_width="91dp"
        android:layout_height="29dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Salir"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangles2"
        app:layout_constraintStart_toEndOf="@+id/iv_desing_log_out" />
</androidx.constraintlayout.widget.ConstraintLayout>
